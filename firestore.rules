rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Erlaube Lese- und Schreibzugriff auf alle Sammlungen für authentifizierte Nutzer.
    // Da wir anonyme Authentifizierung nutzen, ist request.auth für jeden User gesetzt,
    // der die App rechtmäßig öffnet.
    
    match /requests/{requestId} {
      allow read, write: if request.auth != null;
    }
    
    match /archive/{archiveId} {
      allow read, write: if request.auth != null;
    }

    match /history/{historyId} {
      allow read, write: if request.auth != null;
    }
    
    match /blacklist/{songId} {
      allow read, write: if request.auth != null;
    }

    match /forbidden_words/{wordId} {
      allow read, write: if request.auth != null;
    }

    match /banned_devices/{uid} {
      allow read, write: if request.auth != null;
    }

    match /settings/{settingId} {
      allow read, write: if request.auth != null;
    }
  }
}
